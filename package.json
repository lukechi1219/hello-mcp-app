{
  "name": "hello-mcp-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Multilingual MCP App with iPhone-style fade animations",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build": "tsc --noEmit && tsc -p tsconfig.server.json && vite build",
    "start": "concurrently \"cross-env NODE_ENV=development vite build --watch\" \"tsx watch src/entry/node-http.ts\"",
    "start:stdio": "pnpm build && node dist/entry/stdio.js",
    "start:prod": "node dist/entry/node-http.js"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "1.25.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "preact": "^10.28.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-singlefile": "^2.0.3"
  }
}
