{
  "name": "hello-mcp-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Multilingual MCP App with iPhone-style fade animations",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "build:ui": "cross-env INPUT=src/ui/mcp-app.html vite build",
    "embed:html": "node scripts/embed-html.js",
    "dev": "pnpm build:ui && tsx src/entry/stdio.ts",
    "dev:http": "pnpm build:ui && tsx src/entry/node-http.ts",
    "build": "pnpm build:ui && tsc",
    "build:cf": "pnpm build:ui && pnpm embed:html",
    "start": "node dist/entry/node-http.js",
    "deploy:cf": "pnpm build:cf && wrangler deploy"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "1.25.2",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "zod": "^3.24.1",
    "agents": "^0.3.10"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-singlefile": "^2.0.3",
    "tsx": "^4.19.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "wrangler": "^3.100.0",
    "@types/node": "^22.10.5",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17"
  }
}
